{
  "name": "intro",
  "routes": {
    "main": {
      "title": "Welcome",
      "desktopTitle": "Start",
      "icon": "home",
      "forceNavigation": true,
      "skipExtendedMenuOnDesktop": true,
      "2cover": {
        "backgroundColor": "#00838F",
        "align": "bottom",
        "opacity": 1,
        "image": "background-stars.r.png",
        "navigation": true,
        "title": "H > m",
        "v3ideo": "https://www.youtube.com/watch?v=QBEnXQqbKUI",
        "type": "default"
      },
      "extendedMenu": [
        {
          "id": "team",
          "title": "Team",
          "path": "/team"
        },
        {
          "id": "roadmap",
          "title": "Roadmap",
          "path": "/roadmap"
        }
      ],
      "components": {
        "intro": {
          "source": "summary",
          "text": "local://intro",
          "image": "carmel.svg",
          "textColor": "#37474F"
        },
        "pillars": {
          "source": "benefits",
          "benefits": [
            { "text": "local://tweak", "image": "tweak.svg" },
            { "text": "local://reputation", "image": "reputation.svg" },
            { "text": "local://market", "image": "market.svg" }
          ],
          "textColor": "#37474F",
          "backgroundColor": "#ffffff"
        },
        "video": {
          "source": "presentation",
          "text": "local://intro",
          "url": "https://www.youtube.com/watch?v=qrHBVDbrOOY",
          "image": "presentation.png",
          "textColor": "#37474F"
        },
        "preview": {
          "source": "preview",
          "text": "local://preview",
          "image": "carmel-studio.gif",
          "textColor": "#37474F"
        },
        "tokens": {
          "source": "columns",
          "text": "local://tokens",
          "marketTitle": "Huge market",
          "data": "https://raw.githubusercontent.com/fluidtrends/carmel/master/chunks/intro/data/tokenInfo.json"
        },
        "features": [
          {
            "id": "chris",
            "source": "feature",
            "text": "github://fluidtrends/carmel/content/product/stakeholders/chris",
            "image": "learning.png",
            "actionTitle": "Learn more about Chris",
            "backgroundColor": "#ffffff",
            "textColor": "#0686d8",
            "animation": true
          },
          {
            "id": "stakeholders",
            "source": "feature",
            "text": "github://fluidtrends/carmel/content/product/stakeholders/all",
            "image": "stakeholders.png",
            "reversed": true,
            "actionTitle": "Meet All The Carmel Stakeholders",
            "backgroundColor": "#ffffff",
            "textColor": "#0686d8",
            "animation": true
          },
          {
            "id": "challenges",
            "source": "feature",
            "text": "github://fluidtrends/carmel/content/whitepaper/challenges/summary",
            "image": "challenges.png",
            "actionTitle": "Learn More",
            "backgroundColor": "#ffffff",
            "textColor": "#0686d8",
            "animation": true
          },
          {
            "id": "economy",
            "source": "feature",
            "text": "github://fluidtrends/carmel/content/whitepaper/token-economy/summary",
            "image": "economy.png",
            "reversed": true,
            "actionTitle": "Learn More",
            "backgroundColor": "#ffffff",
            "textColor": "#0686d8",
            "animation": true
          },
          {
            "id": "architecture",
            "source": "feature",
            "text": "github://fluidtrends/carmel/content/whitepaper/architecture/summary",
            "image": "architecture.png",
            "actionTitle": "Learn More",
            "backgroundColor": "#ffffff",
            "textColor": "#0686d8",
            "animation": true
          },
          {
            "id": "security",
            "source": "feature",
            "reversed": true,
            "text": "github://fluidtrends/carmel/content/whitepaper/security/summary",
            "image": "security.png",
            "actionTitle": "Learn More",
            "backgroundColor": "#ffffff",
            "textColor": "#0686d8",
            "animation": true
          }
        ]
      },
      "path": "/",
      "events": {
        "cover": "system://buy",
        "team": "local://team",
        "chris": "local://whitepaper",
        "buy": "local://tokens",
        "distribution": "local://whitepaper/tokens",
        "economy": "local://whitepaper/economy",
        "architecture": "local://whitepaper/architecture",
        "security": "local://whitepaper/security",
        "challenges": "local://whitepaper/challenges"
      },
      "startOperationsOnMount": false,
      "operations": {
        "newTransaction": [
          "rest://create/tokens/purchases#newTransaction",
          {
            "onSuccess": "transactionOk",
            "onError": "transactionError"
          }
        ],
        "getContext": [
          "firebase://retrieve/context?latest=1#freshContext",
          {
            "onSuccess": "gotContext"
          }
        ]
      }
    },
    "team": {
      "title": "Team",
      "icon": "favorite",
      "path": "/team",
      "action": true,
      "events": {
        "cover": "system://team"
      },
      "cover": {
        "backgroundColor": "#00838F",
        "align": "bottom",
        "opacity": 0.2,
        "image": "team.r.png",
        "navigation": true,
        "title": "Meet the #CarmelTeam",
        "type": "simple"
      }
    },
    "roadmap": {
      "title": "Roadmap",
      "icon": "supervisor_account",
      "path": "/roadmap",
      "cover": {
        "backgroundColor": "#00838F",
        "align": "bottom",
        "opacity": 0.2,
        "image": "roadmap.r.png",
        "navigation": true,
        "title": "Join us on the #RoadTo1B lives changed",
        "type": "simple"
      },
      "components": {
        "intro": {
          "source": "summary",
          "text": "local://intro",
          "image": "carmel-logo.png",
          "textColor": "#37474F"
        }
      }
    },
    "terms": {
      "title": "Terms",
      "icon": "supervisor_account",
      "path": "/terms",
      "cover": {
        "backgroundColor": "#00838F",
        "align": "bottom",
        "opacity": 0.5,
        "image": "background-stars.r.png",
        "navigation": true,
        "title": "Carmel Terms and Conditions",
        "type": "simple"
      },
      "components": {
        "intro": {
          "source": "summary",
          "text": "local://terms",
          "image": "carmel-logo.png",
          "textColor": "#37474F"
        }
      }
    }
  }
}
