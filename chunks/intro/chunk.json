{
  "name": "intro",
  "routes": {
    "main": {
      "title": "Welcome",
      "desktopTitle": "Start",
      "icon": "home",
      "forceNavigation": true,
      "noFooter": true,
      "skipExtendedMenuOnDesktop": true,
      "extendedMenu": [
        {
          "id": "roadmap",
          "title": "Roadmap",
          "path": "/roadmap"
        }
      ],
      "path": "/",
      "events": {
        "cover": "system://buy",
        "chris": "local://whitepaper",
        "buy": "local://tokens",
        "distribution": "local://whitepaper/tokens",
        "economy": "local://whitepaper/economy",
        "architecture": "local://whitepaper/architecture",
        "security": "local://whitepaper/security",
        "challenges": "local://whitepaper/challenges"
      },
      "startOperationsOnMount": false,
      "operations": {
        "newTransaction": [
          "rest://create/tokens/purchases#newTransaction",
          {
            "onSuccess": "transactionOk",
            "onError": "transactionError"
          }
        ],
        "getContext": [
          "firebase://retrieve/context?latest=1#freshContext",
          {
            "onSuccess": "gotContext"
          }
        ]
      }
    },
    "team": {
      "title": "Team",
      "icon": "supervisor_account",
      "path": "/team",
      "skipRootVariant": true,
      "events": {
        "cover": "local://team"
      },
      "cover": {
        "backgroundColor": "#00838F",
        "align": "bottom",
        "opacity": 0.5,
        "image": "background-default.r.png",
        "navigation": true,
        "title": "Meet the #CarmelTeam",
        "type": "default"
      }
    },
    "roadmap": {
      "title": "Roadmap",
      "icon": "supervisor_account",
      "path": "/roadmap",
      "cover": {
        "backgroundColor": "#00838F",
        "align": "bottom",
        "opacity": 0.5,
        "image": "background-intro.r.png",
        "navigation": true,
        "title": "Join us on the #RoadTo1B lives changed",
        "type": "default"
      },
      "components": {
        "intro": {
          "source": "summary",
          "text": "local://intro",
          "image": "carmel-logo.png",
          "textColor": "#37474F"
        }
      }
    },
    "terms": {
      "title": "Terms",
      "icon": "supervisor_account",
      "path": "/terms",
      "cover": {
        "backgroundColor": "#00838F",
        "align": "bottom",
        "opacity": 0.5,
        "image": "background-stars.r.png",
        "navigation": true,
        "title": "Carmel Terms and Conditions",
        "type": "simple"
      },
      "components": {
        "intro": {
          "source": "summary",
          "text": "local://terms",
          "image": "carmel-logo.png",
          "textColor": "#37474F"
        }
      }
    }
  }
}